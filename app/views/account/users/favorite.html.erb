
  <div class="panel panel-primary">

    <div class="panel-heading">
      <h4>我的收藏</h4>
    </div>

    <div class="col-md-12 hidden-xs">
      <table class="table">
    <thead>
      <tr>
        <th> 标题 </th>
        <th> 作者 </th>
        <th> 更新时间 </th>
        <th>操作</th>
      </tr>
    </thead>

    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td> <%= link_to(post.title, issue_post_path(post.issue,post)) %> </td>
          <td> <%= post.author %> </td>
          <td> <%= post.updated_at %> </td>
          <td> <%= link_to('删除', remove_favorite_post_account_post_path(post), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger btn-xs") %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

