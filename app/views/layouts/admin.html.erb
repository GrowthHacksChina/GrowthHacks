<!DOCTYPE html>
<html>
    <head>
        <title>GrowthHack中国 </title>
        <%= csrf_meta_tags %>
        <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
        <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    </head>
    <body>
        <div class="container" >
            <%= render "common/navbar" %>
            <%= render "common/flashes" %>
            <br />
            <div class="container">
                <div class="row">
                    <div class="col-md-2">
                        <ul class="nav nav-pills nav-stacked">
                              <%= active_link_to '用户管理', admin_users_path, :active => :exclusive, :wrap_tag => :li %>

                              <%= active_link_to '期刊管理', admin_issues_path, :active => :exclusive, :wrap_tag => :li %>

                              <%= active_link_to '文章管理', admin_posts_path, :active => :exclusive, :wrap_tag => :li %>

                              <%= active_link_to '招聘管理', admin_jobs_path, :active => :exclusive, :wrap_tag => :li %>

                        </ul>
                    </div>
                    <div class="col-md-10">
                       <%= render_breadcrumb %>
                        <%= yield %>
                    </div>
                </div>
            </div>

          </div>
      </body>
      <%= render "common/footer" %>

  </html>
