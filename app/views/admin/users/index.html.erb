<div class="col-md-12 col-xs-12">
    <table class="table table-hover table-condensed table-striped">
      <thead>
        <tr>
            <th>
                用户名
            </th>
            <th>
                权限
            </th>
            <th>
                管理选项
            </th>
            <th>
                权限状态
            </th>
            <th>
                注册时间
            </th>
        </tr>
      </thead>
        <% @users.each do |user|%>
        <tr>
            <td class="col-md-3 col-xs-3">
                <% if(user.is_admin)%>
                <%= fa_icon "lock", right: true%>
            <% else%>
                <%= fa_icon "unlock", right: true%>
                <%end%>
                <%=  user.email %>
            </td>
            <td>
                <% if(user.is_admin)%>
                管理员
            <% else%>
                普通用户
                <%end%>
            </td>
            <td>
                <%= link_to("Edit", edit_admin_user_path(user), class:"btn btn-xs btn-primary") %>
                <%= link_to("Destroy", admin_user_path(user), class:"btn btn-xs btn-danger", :method => :delete, :data => { :confirm => "Are you sure?"}) %>

            </td>
            <% if(user.is_admin)%>
            <td>
                <%= button_to("Admin" , admin_user_change_path(user), class:"btn btn-xs btn-warning") %>
            </td>
        <% else%>
            <td>
                <%= button_to("Normal" , admin_user_change_path(user), class:"btn btn-xs btn-warning") %>
            </td>

            <%end%>
            <td>
                <%= user.created_at %>
            </td>
        </tr>
        <% end %>
    </table>

</div>
