<div class="col-md-12">
<div class="pull-right">
  <%= link_to("Add a job", new_admin_job_path, :class => "btn btn-default") %>
</div>
<br>

<table class="table table-hover table-condensed table-striped">
    <thead>
      <tr>
        <td>
          职缺
        </td>
        <td>
          收到履历数量
        </td>
        <td>
          薪资下限
        </td>
        <td>
          薪资上限
        </td>
        <td>
          管理选项
        </td>
        <td>
          刊登时间
        </td>
      </tr>
    </thead>

  <% @jobs.each do |job| %>
  <tr>
    <td>
    <%= link_to(job.title, admin_job_path(job)) %>
    </td>
    <td>"#"</td>
    <td> <%= job.wage_lower_bound %></td>
    <td> <%= job.wage_upper_bound %></td>

    <td>
      <%= link_to("Edit",edit_admin_job_path(job),class:"btn btn-xs btn-primary") %>
      <%= link_to("Destroy", admin_job_path(job),class:"btn btn-xs btn-danger", :method => :delete, :data => { :confirm => "Are you sure?"}) %>
    </td>
    <td>
      <%= job.created_at %>
    </td>
  </tr>
  <% end %>
</table>
