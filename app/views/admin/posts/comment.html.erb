<table class="table table-hover table-condensed table-striped">

    <thead>
        <tr>
            <td class="col-md-3">用户名</td>
            <td class="col-md-5">评论内容</td>
            <td class="col-md-3 col-md-offset-1">评论管理</td>
        </tr>
    </thead>
    <tbody>
              <% @comment.each do |comment| %>
        <tr>
            <td><%= comment.user.name %></td>
            <td>
              <%= render_comment_status(comment) %>
              <%= comment.content %>
            </td>
            <td>
                <% if comment.is_hidden %>
                <%= link_to("Publish", publish_admin_comment_path(comment), class:"btn btn-xs btn-primary",
                          method: :post )%>
                <% else %>
                <%= link_to("Hide", hide_admin_comment_path(comment), class:"btn btn-xs btn-primary",
                          method: :post) %>
                <% end %>
                <%= link_to("Destroy", admin_comment_path(comment), class:"btn btn-xs btn-danger",
                          method: :delete, data: {confirm: "确定删除吗?"})%>
            </td>
        </tr>
          <% end %>
    </tbody>
</table>
