
<div class="center">
  <%= render :partial => "welcome/slide"%>
</div>
<br>
<div class="center">
  <%= render :partial => "welcome/search_bar"%>
</div>

<br>
<div class="row hidden-xs">
  <% @issues.each do |issue| %>
  <div class="col-md-6">
    <div class="panel panel-primary">
      <div class="panel-heading issuetitle"><%= link_to(issue.title, issue_path(issue), class:"issuetitle") %></div>
      <%issue.posts.each do |post| %>
      <div class="panel-body"><%= link_to(post.title, issue_post_path(post.issue,post)) %>
      </div>
      <% end %>
        </div>
    </div>

  <% end %>
</div>

<div class=" visible-xs-block">
  <% @posts.each do |post| %>
  <div class="panel panel-default">
    <div class="panel-body">
        <h3><%= link_to(post.title, post_path(post), class:"issuetitle-mobile") %></h3>
        <hr>
        <div class="index-article-picture"><%= image_tag post.image.mobile %></div>
        <p><%= link_to(post.brief_introduction, post_path(post), class:"issue-brief-controduction-mobile") %></p>
    </div>
  </div>
    <% end %>
  </div>
</div>


<div class="text-center">
<%= will_paginate @posts %>
</div>
