<div class="panel panel-primary">
  <% @issue.posts.each do |post| %>
  <div class="panel-heading">
    <%= post.title %>
    <hr>
      <span class="label label-danger" id="tag1"> 作者: <%= post.author %></span>
      <span class="label label-danger" id="tag2"> 标签: <%= post.tag %></span>
      <span class="label label-danger" id="tag3"> 时间: <%= post.created_at %></span>
  </div>
  <div class="panel-body"><%= post.content%> </div>
  <% end %>
</div>
