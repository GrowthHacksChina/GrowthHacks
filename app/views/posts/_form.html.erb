<%= simple_form_for [@issue,@post] do |f| %>
<div class="form-group">
  <%= f.input :title %>
  <%= f.input :content, input_html: {class:"form-control"}%>
  <%= f.input :author %>
  <%= f.input :tag %>
  <%= f.input :origin_link %>
  <%= f.input :PV %>
</div>

<div class="form-actions">
  <%= f.submit "提交", disable_with: "提交中...", class: "btn btn-primary"%>
</div>
<% end %>
